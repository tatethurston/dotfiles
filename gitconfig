[init]
  templatedir   = ~/.git_template
	defaultBranch = main
[user]
	email = tatethurston@gmail.com
	name = Tate Thurston
[push]
	default         = current
	default         = simple
  autoSetupRemote = true
[core]
	excludesfile = ~/.gitignore_global
	autocrlf   = input
	ignorecase = true
  pager = less
[help]
	autocorrect = 1
[diff]
  compactionHeuristic = true
[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan
[include]
  path = ~/.gitconfig.local
[alias]
	co = "! ~/dotfiles/scripts/git/checkout.sh"
	br = branch
	ci = commit
	st = status
  cleanup = "!git branch | grep -v master | xargs git branch -D"
  remain  = "!git checkout main; git pull; git checkout -; git rebase main"
[merge]
	conflictstyle = diff3
  tool          = opendiff
[mergetool]
	keepBackup = false
[pull]
	ff = only
[difftool]
  # tool = opendiff
	# prompt = false
  # # Be able to abort all diffs with `:cq` or `:cquit`
  # trustExitCode = true
[branch]
	autoSetupMerge = always
[gpg]
	format = ssh

[include]
	path = ~/.gitconfig.local
