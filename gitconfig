[init]
  templatedir = ~/.git_template
[user]
	email = tatethurston@gmail.com
	name = Tate Thurston
[push]
	default = simple
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	ignorecase = true
  pager = less
[help]
	autocorrect = 1
[diff]
  compactionHeuristic = true
[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan
[include]
  path = ~/.gitconfig.local
[alias]
	co = "! ~/dotfiles/scripts/git/checkout.sh"
	br = branch
	ci = commit
	st = status
  cleanup = "!git branch | grep -v master | xargs git branch -D"
[merge]
	conflictstyle = diff3
[mergetool]
	keepBackup = false
[pull]
	ff = only
[difftool]
  tool = vimdiff3
	prompt = false
  # Be able to abort all diffs with `:cq` or `:cquit`
  trustExitCode = true
